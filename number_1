<?php
 // задание №1
 // Принимаем параметры с полным текстом статьи ($text) и максимальную длину анонса ($lengtLimit)
 function generator ($text, $lengtLimit=250) {
 // Обрезка текста до указанной длины (250 символов)
$text = substr($text, 0, $lengtLimit);
 // Проверка на наличие в тексте пробелов после обрезки
 if (strpos($text, ' ') !== false) {
 // Находим последние 3 слова в тексте
$lastWords = implode(' ', array_slice(str_word_count($text, 1), -3));
 // Добавляем ссылку на полный текст статьи и многоточие
$announcement = rtrim($text) . '...' . '<a href="full_article.html">' . $lastWords . '</a>'; } 
 else
{
// Если пробелов нет, то весь текст будет ссылкой на полный текст статьи
$announcement = '<a href="full_article.html">' . $text . '</a>';
}
    return $announcement;
}
$fullText = "мяу юлять я заебалась пошло все нахуй блятт вы все ебаные пидоры я в рот вас всех ебала про влотпмлут авдпомтвлоимп валваао пладтпло валотмплдв двлтмдпщат дввввддддддддд алпоплт пмлкщапмлтлав грашмлопивлоамп влаглримппвлоапмт влаааааалала ААААААААААААА БЛЯТЬ ППИДОРЫ СХУЯЛИ Я ННЕ МОГЛА РОДИТЬСЯ БЯЛТЬ В НОРМАЛЬНОЙ БЯЛТЬ СУКА СЕМЬЕ НАХУЙ Я В РОТ ЕБЛА ВСЕ ЭТО НАХВЙЦАТЛМО";
$announcement = generator($fullText);
echo $announcement;
